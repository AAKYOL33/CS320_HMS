CREATE TABLE `cs320`.`patient` (
  `patient_id` INT NOT NULL AUTO_INCREMENT,
  `patient_fname` VARCHAR(45) NOT NULL,
  `patient_lname` VARCHAR(45) NOT NULL,
  `blood_type` VARCHAR(45) NOT NULL,
  `p_weight` VARCHAR(45) NOT NULL,
  `p_height` VARCHAR(45) NOT NULL,
  `disease_hist` VARCHAR(150) NULL,
  `medicine_hist` VARCHAR(45) NULL,
  `diet_plan` VARCHAR(45) NULL,
  `exercise_plan` VARCHAR(45) NULL,
  PRIMARY KEY (`patient_id`));


CREATE TABLE `cs320`.`doctor` (
  `doctor_id` INT NOT NULL AUTO_INCREMENT,
  `doctor_fname` VARCHAR(45) NOT NULL,
  `doctor_lname` VARCHAR(45) NOT NULL,
  `d_field` VARCHAR(45) NOT NULL,
  `d_bloodtype` VARCHAR(45) NOT NULL,
  `d_weight` VARCHAR(45) NOT NULL,
  `d_height` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`doctor_id`));


CREATE TABLE `cs320`.`hospital` (
  `appointment_no` INT NOT NULL AUTO_INCREMENT,
  `doctor_id` VARCHAR(45) NOT NULL,
  `patient_id` VARCHAR(45) NOT NULL,
  `polyclinic` VARCHAR(45) NOT NULL,
  `appointment_date` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`appointment_no`));
  
CREATE TABLE `cs320`.`appointment` (
int `appointment_no` NOT NULL AUTO_INCREMENT,
datetime `ap_datetime`,
int `patient_id` NOT NULL,
int `doctor_id` NOT NULL,
primary key (`ap_datetime`, `patient_id`),
foreign key `patient_id` references `cs320`.`patient`,
foreign key `doctor_id` references `cs320`.`doctor`
);

create table `cs320`.`availability`
(
int `doctor_id`,
datetime `av_from`,
datetime `av_to`,
primary key(`doctor_id`, `av_from`),
foreign key `doctor_id` references `cs320`.`doctor`
);

CREATE TABLE `cs320`.`diagnosis`
(
varchar(5) `diagnosis_id` NOT NULL AUTO_INCREMENT,
varchar(15) `disease`,
varchar(15) `medicine`,
int `patient_id`,
int `doctor_id` NOT NULL,
foreign key `doctor_id` references `cs320`.`doctor`,
primary key (`diagnosis_id`),
foreign key `patient_id` references `cs320`.`patient`
);

CREATE TABLE `cs320`.`meal_plan`(
varchar(5) `meal_plan_id` NOT NULL AUTO_INCREMENT,
varchar(500) `breakfast`,
varchar(500) `lunch`,
varchar(500) `dinner`,
int `patient_id`,
foreign key `patient_id` references `cs320`.`patient`
);

CREATE TABLE `cs320`.`exercise_plan`(
varchar(5) `exercise_plan_id` NOT NULL AUTO_INCREMENT,
varchar(500) `plan`,
int `patient_id`,
foreign key `patient_id` references `cs320`.`patient`
);

